if(ACMAKE_SET_GLOBAL_OUTPUT_DIRECTORIES_INCLUDED)
    return()
endif()
set(ACMAKE_SET_GLOBAL_OUTPUT_DIRECTORIES_INCLUDED TRUE)

macro(acmake_set_global_output_directories)
    foreach(OUTPUTCONFIG ${CMAKE_CONFIGURATION_TYPES})
        string(TOUPPER ${OUTPUTCONFIG} OUTPUTCONFIG_UPPER)
        string(TOLOWER ${OUTPUTCONFIG} OUTPUTCONFIG_LOWER)
        set(CMAKE_LIBRARY_OUTPUT_DIRECTORY_${OUTPUTCONFIG_UPPER} ${CMAKE_CURRENT_BINARY_DIR}/lib/${OUTPUTCONFIG_LOWER})
        set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY_${OUTPUTCONFIG_UPPER} ${CMAKE_CURRENT_BINARY_DIR}/lib/${OUTPUTCONFIG_LOWER})
        set(CMAKE_RUNTIME_OUTPUT_DIRECTORY_${OUTPUTCONFIG_UPPER} ${CMAKE_CURRENT_BINARY_DIR}/bin/${OUTPUTCONFIG_LOWER})
    endforeach()
endmacro()
